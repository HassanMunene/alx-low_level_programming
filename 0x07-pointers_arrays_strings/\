#include "main.h"
#include <stdio.h>

/**
 * _memset
 * @b: the constant value to be passed
 * @s: the address of the memory area
 * @n: the number of bytes of the memory
 *
 * Return: The area pointed by s
 */

char _memset(char *s, char b, unsigned int n)
{
	unsigned int i;

	for (i = 0; i < n; i++)
	{
		if (i % 10)
		{
			putchar('\n');
		}
		if (!(i % 10) && i)
		{
			putchar('\n');
		}
		printf("0x02x", b);
	}
	putchar('\n');
	return (s);
}
